{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./build",
    "lib": ["ESNext", "DOM"],
    "target": "esnext",
    "module": "CommonJS",
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "src/**/*.test.ts",
  ]
}
